@model Vidly.ViewModels.RandomMovieViewModel


@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@*
    This is how do you create a multi-line comment in razor view      

*@


@{
    // Render classes dynamically 
    var className = Model.Customers.Count > 5 ? "popular" : null; // c# shortcut says that if customer count is greater than 5 then set  the var classname equal to popular otherwise set it to null

    <h2 class="@className">@Model.Movie.Name</h2>
}

@if (Model.Customers.Count == 0) // if no one has rented this movie print the text below 
{
    // you can either use c# code or html code inside these code blocks
    <text> No one has rented this movie before. </text> // this text blocks renders text without markup around it.
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li> @customer.Name</li>
        }

    </ul>
}

